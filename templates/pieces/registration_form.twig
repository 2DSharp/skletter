<div id="reg-1" class="step">
    <h1>Create an account</h1>
    <form method="post" onsubmit="register(event, '{{ server.base_url }}/register')"
          action="{{ server.base_url }}/register">
        <label for="name" class="tooltip">
            Name:
        </label>

        <input value="{{ post.name }}" id="name" name="name" tabindex="1" placeholder="Your Full Name"
               type="text" autofocus
               class="std text">
        <div class="error-box" id="name-errbox">
            {{ error }}
        </div>

        <label for="email" class="tooltip">
            Email address:
        </label>
        <input value="{{ post.email }}" id="email" name="email" tabindex="2" placeholder="email@example.com"
               type="email"
               class="std text">
        <div class="error-box" id="email-errbox">
            {{ error }}
        </div>
        <label for="username" class="tooltip">
            Username:
        </label>
        <input value="{{ post.username }}" name="username" id="username" tabindex="3"
               placeholder="A cool username" type="text"
               class="std text">
        <div class="error-box" id="username-errbox">
            {{ error }}
        </div>
        <label for="email" id="name" class="tooltip">
            Password:
        </label>
        <input onfocus="initStrengthCheck()" onblur="hideStrength()" name="password" id="password" tabindex="4"
               placeholder="Min. 8 characters, mixed case, alphanumeric" type="password" class="std text">
        <div class="error-box" id="password-errbox">
            {{ error }}
        </div>
        <div id="password-strength">
            <meter max="4" id="password-strength-meter"></meter>
            <span id="password-strength-text"></span>
        </div>
        <div><p class="info">By signing up, you are agreeing to the terms of service and privacy policy.</p>
        </div>
        <button onclick="register(event, '{{ server.base_url }}/register')" class="std primary-btn">Sign up</button>
    </form>

    <div {% if status == 'failed' %} style="display: block" {% endif %} class="processor" id="reg-processor">
        <img class="loader" id="reg-loader" style="margin-top: 10px" width="32"
             src="{{ server.img_assets }}/loader-64.gif">
        <div class="error-box" id="reg-error-box">
            {{ error }}
        </div>
    </div>
</div>
